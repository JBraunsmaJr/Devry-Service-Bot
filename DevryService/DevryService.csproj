  <ItemGroup>
    <ProjectReference Include="..\DevryServices.Common\DevryServices.Common.csproj" />
  </ItemGroup>


  <ItemGroup>
    <Resource Include="DevryCommunity.db" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="DevryDbContext.cs">
